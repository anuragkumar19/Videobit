<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>New Room - Videobit</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom fonts for this template -->
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="/lib/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />

    <!-- Custom styles for this template -->
    <link href="/css/landing-page.min.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation -->
    <%- include('./components/nav') %>
        <%- include('./components/alerts') %>

            <main class="my-3">
                <div class="container" style="max-width: 500px">
                    <h1 class="my-3">Create a Room</h1>
                    <div class="card">
                        <div class="card-body">
                            <form action="/dashboard/createRoom" method="POST">
                                <div class="form-group">
                                    <label for="name">Room Name</label>
                                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter Room Name" value="<%- typeof roomData != 'undefined' && roomData.name ? roomData.name : ''%>" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Room Password</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter room Password" value="<%- typeof roomData != 'undefined' && roomData.password ? roomData.password : ''%>" />
                                </div>
                                <div class="form-group">
                                    <label for="password2">Re-type Password</label>
                                    <input type="password" name="password2" id="password2" class="form-control" placeholder="Confirm room Password" />
                                </div>
                                <div class="form-group">
                                    <label for="detail">Detail About Room</label>
                                    <textarea type="text" name="detail" rows="5" id="detail" class="form-control" placeholder="Enter Description"><%- typeof roomData != 'undefined' && roomData.detail ? roomData.detail : ''%></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">
                                    Create
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('./components/footer') %>
                <!-- Bootstrap core JavaScript -->
                <script src="/js/jquery.min.js"></script>
                <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>