<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Join Meeting - Videobit</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="/lib/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="/lib/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="/css/landing-page.min.css" rel="stylesheet">

</head>

<body>

    <%- include('./components/nav') %>
        <%- include('./components/alerts') %>

            <main class="my-3">
                <div class="container" style="max-width: 500px;">
                    <h1 class="my-3">Join a meeting</h1>
                    <div class="card">
                        <div class="card-body">
                            <form action="/join/room/call" method="GET">
                                <div class="form-group">
                                    <label for="roomId">Room ID</label>
                                    <input type="text" name="roomId" id="roomId" class="form-control" placeholder="Enter Room Id" value="<%- roomId ? roomId : '' %>">
                                </div>
                                <div class="form-group">
                                    <label for="password">Room Password</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter room Password">
                                </div>

                                <div class="form-group">
                                    <label for="name">Your Name</label>
                                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name" value='<%= isAuthenticated ? user.name : '' %>'>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg btn-block">Join</button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('./components/footer') %>



                <!-- Bootstrap core JavaScript -->
                <script src="/js/jquery.min.js"></script>
                <script src="/js/bootstrap.bundle.min.js"></script>

</body>

</html>